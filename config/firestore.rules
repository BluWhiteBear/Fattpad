rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /stories/{storyId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.authorId;
      // More permissive rule for likes - allow any update that includes likes
      allow update: if 'likes' in request.resource.data;
      allow delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    }
    
    match /users/{userId} {
      // Users can read and write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow reading other users' profiles (for public display)
      allow read: if true;
      // Allow updating stats fields for follow/unfollow operations
      allow update: if request.auth != null && 
                   onlyUpdatingStats(request.resource.data, resource.data);
    }
    
    match /follows/{followId} {
      // Allow authenticated users to create follow relationships
      allow create: if request.auth != null && 
                   request.auth.uid == request.resource.data.followerId;
      // Allow users to delete their own follow relationships
      allow delete: if request.auth != null && 
                   request.auth.uid == resource.data.followerId;
      // Allow reading follow relationships for checking follow status
      allow read: if request.auth != null;
    }
    
    match /notifications/{notificationId} {
      // Allow authenticated users to create and read notifications
      allow create, read: if request.auth != null;
      // Allow users to update their own notifications (mark as read)
      allow update: if request.auth != null && 
                   request.auth.uid == resource.data.userId;
    }
    
    match /comments/{commentId} {
      // Allow anyone to read comments
      allow read: if true;
      // Allow authenticated users to create comments
      allow create: if request.auth != null && 
                   request.auth.uid == request.resource.data.authorId;
      // Allow comment authors to update their own comments (for likes)
      allow update: if request.auth != null && 
                   (request.auth.uid == resource.data.authorId || 
                    onlyUpdatingLikes(request.resource.data, resource.data));
      // Allow comment authors to delete their own comments
      allow delete: if request.auth != null && 
                   request.auth.uid == resource.data.authorId;
    }
    
    // Catch-all for debugging
    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
  
  // Helper function to check if only stats are being updated
  function onlyUpdatingStats(newData, existingData) {
    return newData.diff(existingData).affectedKeys()
           .hasOnly(['stats', 'updatedAt']) &&
           newData.stats.diff(existingData.stats).affectedKeys()
           .hasOnly(['followers', 'following']);
  }
  
  // Helper function to check if only read status is being updated
  function onlyUpdatingReadStatus(newData, existingData) {
    return newData.diff(existingData).affectedKeys()
           .hasOnly(['read']);
  }
  
  // Helper function to check if only likes are being updated
  function onlyUpdatingLikes(newData, existingData) {
    return newData.diff(existingData).affectedKeys()
           .hasOnly(['likes']);
  }
}